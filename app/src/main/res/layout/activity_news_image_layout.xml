<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.warmtel.news.widget.TitleBar
        android:id="@+id/news_image_titlebar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:titlebar_title_bg="@android:color/background_dark"
        app:left_icon_cust="@drawable/back_action_dark_selector" />

    <android.support.v4.view.ViewPager
        android:id="@+id/news_image_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/news_image_titlebar"/>
</RelativeLayout>
